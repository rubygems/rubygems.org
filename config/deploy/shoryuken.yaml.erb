apiVersion: apps/v1
kind: Deployment
metadata:
  name: shoryuken
  annotations:
    shipit.shopify.io/restart: 'true'
spec:
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 0%
      maxUnavailable: 50%
  selector:
    matchLabels:
      name: shoryuken
  template:
    metadata:
      annotations:
        ad.datadoghq.com/shoryuken.logs: '[{"source":"rails","service":"rubygems.org","version": <%= current_sha.dump %>}]'
      labels:
        name: shoryuken
    spec:
      containers:
      - name: shoryuken
        image: quay.io/rubygems/rubygems.org:<%= current_sha %>
        args: ["bin/shoryuken-worker"]
        resources:
          <% if environment == 'production' %>
          requests:
            cpu: 100m
            memory: 300Mi
          limits:
            cpu: 400m
            memory: 500Mi
          <% else %>
          requests:
            cpu: 100m
            memory: 250Mi
          limits:
            cpu: 400m
            memory: 300Mi
          <% end %>
        env:
          - name: RAILS_ENV
            value: "<%= rails_env %>"
          - name: ENV
            value: "<%= environment %>"
          - name: DD_AGENT_HOST
            valueFrom:
              fieldRef:
                apiVersion: v1
                fieldPath: status.hostIP
          - name: STATSD_IMPLEMENTATION
            value: "datadog"
          - name: STATSD_HOST
            valueFrom:
              fieldRef:
                apiVersion: v1
                fieldPath: status.hostIP
          - name: STATSD_ADDR
            value: $(STATSD_HOST):8125
          - name: SECRET_KEY_BASE
            valueFrom:
              secretKeyRef:
                name: <%= rails_env %>
                key: secret_key_base
          - name: AWS_REGION
            value: "us-west-2"
          - name: FASTLY_LOG_PROCESSOR_ENABLED
            value: "true"
          - name: S3_KEY
            valueFrom:
              secretKeyRef:
                name: <%= rails_env %>
                key: aws_access_key_id
          - name: S3_SECRET
            valueFrom:
              secretKeyRef:
                name: <%= rails_env %>
                key: aws_secret_access_key
          - name: AWS_ACCESS_KEY_ID
            valueFrom:
              secretKeyRef:
                name: <%= rails_env %>
                key: aws_access_key_id
          - name: AWS_SECRET_ACCESS_KEY
            valueFrom:
              secretKeyRef:
                name: <%= rails_env %>
                key: aws_secret_access_key
          - name: HONEYBADGER_API_KEY
            valueFrom:
              secretKeyRef:
                name: <%= rails_env %>
                key: honeybadger_api_key
          - name: FASTLY_API_KEY
            valueFrom:
              secretKeyRef:
                name: <%= rails_env %>
                key: fastly_api_key
          - name: FASTLY_SERVICE_ID
            valueFrom:
              secretKeyRef:
                name: <%= rails_env %>
                key: fastly_service_id
          - name: FASTLY_DOMAINS
            valueFrom:
              secretKeyRef:
                name: <%= rails_env %>
                key: fastly_domains
          - name: ELASTICSEARCH_URL
            valueFrom:
              secretKeyRef:
                name: <%= rails_env %>
                key: elasticsearch_url
          - name: MEMCACHED_ENDPOINT
            valueFrom:
              secretKeyRef:
                name: <%= rails_env %>
                key: memcached_endpoint
          - name: SENDGRID_USERNAME
            valueFrom:
              secretKeyRef:
                name: <%= rails_env %>
                key: sendgrid_username
          - name: SENDGRID_PASSWORD
            valueFrom:
              secretKeyRef:
                name: <%= rails_env %>
                key: sendgrid_password
          - name: DATABASE_URL
            valueFrom:
              secretKeyRef:
                name: <%= rails_env %>
                key: database_url
          - name: SQS_QUEUE
            value: "fastly_logs_<%= rails_env %>"
        securityContext:
          privileged: false
