<% @title = "sign in" %>
  <div class="form_links sign_in_links">
    <%= link_to t('.forgot_password'), new_password_url %>
  </div>
<%= form_for :session, :url => session_path do |form| %>
  <div class="text_field">
    <%= form.label :who, t('activerecord.attributes.session.who') %>
    <%= form.text_field :who %>
  </div>
  <div class="password_field">
    <%= form.label :password, t('activerecord.attributes.session.password') %>
    <%= form.password_field :password %>
  </div>
  <div class="form_bottom with_checkbox">
    <%= form.submit "Sign in", :data => {:disable_with => t('form_disable_with')} %>
    <%= form.check_box :auto_login, {checked: true} %>
    <%= form.label :auto_login, "Stay signed in?", :id => "session_auto_login" %>
  </div>
<% end %>
