<% @title = @rubygem.name %>

<div class="row">
  <div class="column l-column">

    <div class="t-body">
      <%= link_to "Back", rubygem_path(@rubygem), class: "t-link--arrow t-link--arrow-left" %>
    </div>

    <div class="owners__wrapper">
      <%= render "owners_table" %>
    </div>
  </div>

  <div class="column r-column">
    <div class="right_wrapper">
      <div class="t-body">
        <h2><%= t("owners.index.add_owner") %></h2>
      </div>
      <%= form_for rubygem_owners_path, method: :post do |form| %>
        <%= label_tag :owner, "Email / Handle", class: "form__label" %>
        <%= text_field_tag :owner, nil, class: "form__input" %>
        <div class="submit_field">
          <%= form.submit "Add Owner", data: { disable_with: t("form_disable_with") }, class: "form__submit" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
