<% @title = t('.title', name: @rubygem.name) %>
<% @subtitle = @latest_version.try(:slug) %>

<div class="l-overflow">
  <div class="l-colspan--l colspan--l--has-border">
    <header class="gems__header push">
      <%= render "search", rubygem: @rubygem %>
    </header>

    <div class="reverse__dependencies">
      <%= render @reverse_dependencies %>
    </div>
    <nav class="pagination">
      <%= link_to_prev_page @reverse_dependencies, '‹ Prev' %>
      <%= link_to_next_page @reverse_dependencies, 'Next ›' %>
    </nav>
  </div>
  <%= render 'rubygems/aside' %>
</div>
