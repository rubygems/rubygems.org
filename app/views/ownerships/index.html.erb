<% @title = t('.title') %>
<% @subtitle = t('.subtitle', :gem => @rubygem.name) %>
<div class="owners info-item">
  <p><%= links_to_owners(@rubygem) %></p>
</div>
<%= error_messages_for :linkset, :object_name => "gem" %>
<%= form_tag rubygem_ownerships_url(@rubygem) do %>
  <div class="text_field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <%= submit_tag t('ownerships.add'), :data => {:disable_with => t('form_disable_with')} %>
<% end %>
