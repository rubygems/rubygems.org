<% @title = t('.title') %>
<% @subtitle = t('.subtitle', :prefix => content_tag(:em, @letter)).html_safe %>
<div class="directory border">
  <ol>
    <% ("A".."Z").each do |letter| %><li><%= link_to(letter, rubygems_path(:letter => letter)) %></li><% end %>
  </ol>
</div>
<p class="entries">
<%= page_entries_info @gems, :entry_name => 'gem', :model => 'gem' %>
</p>
<div class="gems border">
  <ol>
    <%= render @gems %>
  </ol>
</div>
<%= will_paginate @gems %>
