<li>
  <%= link_to version.number, rubygem_version_url(version.rubygem, version.slug) %>
  <small><%= nice_date_for(version.built_at) %></small>
  <% if version.platformed? %>
    <span class="platform"><%= version.platform %></span>
  <% end %>
  <% if version.sized? %>
    <span class="size">(<%= number_to_human_size(version.size) %>)</span>
  <% end %>
  <% if version.yanked? -%>
    <span class="yanked"><%= t '.yanked' %></span>
  <% end -%>
</li>
